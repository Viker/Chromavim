{
    "name": "chromavim",
    "displayName": "Chromavim",
    "description": "Changes the color of Razer Chroma based on VsCodeVim mode",
    "version": "0.0.1",
    "publisher": "Viker",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration":[
            {
                "title": "Chromavim",
                "properties": {
                    "extension.vschroma.defaultColor": {
						"type": "string",
						"default": "04101a",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Default color** used to iluminate keyboard",
						"title": "Default Color"
					}

                }
            }
        ],
        "commands": [
            {
                "command": "extension.setLightGreen",
                "title": "GreenLight"
            },
            {
                "command": "extension.setLightRed",
                "title": "RedLight"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "node-fetch": "^2.0.0",
        "@pastez/chromajs": "git+https://github.com/Pastez/chroma-js.git"
    }
}
