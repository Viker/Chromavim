{
    "name": "chromavim",
    "displayName": "Chromavim",
    "description": "Changes the color of Razer Chroma based on VsCodeVim mode",
    "version": "0.0.1",
    "publisher": "Viker",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.setLightGreen",
                "title": "GreenLight"
            },
            {
                "command": "extension.setLightRed",
                "title": "RedLight"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "node-fetch": "^2.0.0"
    }
}
